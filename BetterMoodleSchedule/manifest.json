{
    "manifest_version": 2,
  
    "name": "BetterMoodleSchedule",
    "description": "This extension helps you display the Moodle Schedule just the way you want!",
    "version": "1.0",
    "icons": {
      "128": "icon128.png",
      "48": "icon48.png",
      "16": "icon16.png"
    },
  
    "page_action": {
      "default_icon": "icon16.png",
      "default_popup": "popup.html",
      "default_title": "BetterMoodleSchedule"
    },

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "content_scripts":[
        {
          "matches": ["https://www.moodle.aau.dk/calmoodle/public/*"],
          "js": ["content.js"],
          "css": ["content.css"]
        }
    ],
    
    "permissions": [
        "tabs",
        "storage",
        "declarativeContent",
        "https://www.moodle.aau.dk/calmoodle/public/*"
    ]
}